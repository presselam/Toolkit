#!/usr/bin/env perl

use 5.020;
use warnings;
use autodie;

use Cwd qw( abs_path );
use File::Basename;
use File::Slurp;
use Getopt::Long;
use Text::Template;

use Toolkit;

my %opts = (
  spooldir  => '.',
  namespace => 'com.whistlinglemons',
  version   => '1.8',
);
if (
  !GetOptions(
    \%opts,       'id=s',       'namespace=s', 'version=s',
    'package=s@', 'spooldir=s', 'exe',
  )
    )
{
  die("Invalid incantation\n");
}

main();
exit(0);

sub main {

  foreach my $req (qw( id spooldir version)) {
    die("must specify a valid $req") unless ( exists( $opts{$req} ) );
  }

  my $ns = "$opts{'namespace'}.$opts{'id'}";

  message('Making Directories');
  my $dir = abs_path("$opts{'spooldir'}/$opts{'id'}");
  mkdir($dir) unless ( -d $dir );
  mkdir("$dir/src") unless ( -d "$dir/src" );

  message('Creating pom');
  my $pom      = read_file("$ENV{'HOME'}/.templates/pomxml");
  my $template = Text::Template->new( TYPE => 'STRING', SOURCE => $pom );

  my $packages   = getPackageList();
  my $executable = '';
  if ( $opts{'exe'} ) {
    $executable = qq{<plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.3.0</version>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <classpathPrefix>\${project.build.directory}/lib/</classpathPrefix>
              <mainClass>$ns.Main</mainClass>
            </manifest>
          </archive>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
        </configuration>
    </plugin>
    <plugin>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-dependency-plugin</artifactId>
      <executions>
        <execution>
          <id>copy-dependencies</id>
          <phase>prepare-package</phase>
          <goals>
            <goal>copy-dependencies</goal>
          </goals>
          <configuration>
            <outputDirectory>\${project.build.directory}/lib</outputDirectory>
            <overWriteReleases>false</overWriteReleases>
            <overWriteSnapshots>false</overWriteSnapshots>
            <overWriteIfNewer>true</overWriteIfNewer>
          </configuration>
        </execution>
      </executions>
    </plugin>};
  }

  open( my $fh, '>', "$dir/pom.xml" );
  $fh->print(
    $template->fill_in(
      HASH => {
        artifact   => $opts{'id'},
        packages   => $packages,
        version    => $opts{'version'},
        executable => $executable,
      }
    )
  );
  close($fh);

  message('Creating Sources');
  my $path = $ns =~ s/\./\//gor;
  $path = "$dir/src/main/java/$path";

  my $tree = '';
  foreach my $node ( split( /\//, $path ) ) {
    $tree .= "/$node";
    next if ( -d $tree );
    mkdir($tree);
  }

  my $file = "$tree/Main.java";

  if ( -f $file ) {
    warn( basename($file) . ' already exists' );
  } else {
    my $py       = read_file("$ENV{'HOME'}/.templates/javaclass");
    my $template = Text::Template->new( TYPE => 'STRING', SOURCE => $py );
    open( my $fh, '>', $file );
    $fh->print(
      $template->fill_in(
        HASH => {
          namespace => $ns,
          artifact  => $opts{'id'}
        }
      )
    );
    close($fh);
  }

  message('Creating Resources');
  $path = "$dir/src/main/resources";

  my $tree = '';
  foreach my $node ( split( /\//, $path ) ) {
    $tree .= "/$node";
    next if ( -d $tree );
    mkdir($tree);
  }

  $file = "$tree/log4j2.xml";
  my $py       = read_file("$ENV{'HOME'}/.templates/log4jxml");
  my $template = Text::Template->new( TYPE => 'STRING', SOURCE => $py );
  open( my $fh, '>', $file );
  $fh->print( $template->fill_in( HASH => {} ) );
  close($fh);

}

sub getPackageList {
  my ($key) = @_;

  my @dlist;
  my $width = 0;
  foreach my $pkg ( @{ $opts{'package'} } ) {
    my ( $g, $a, $v ) = split( ':', $pkg );

    push(
      @dlist, qq{<dependency>
       <groupId>$g</groupId>
       <artifactId>$a</artifactId>
       <version>$v</version>
     </dependency>}
    );
  }

  return join( "\n", @dlist );
}

__END__ 

